@model ResumeBuilder.Models.User
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/register.css" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top css-navbar">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Resume Builder", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="note">
                Create a new account.
            </div>
            <div class="form-content">
                <div class="form-group">
                    @Html.LabelFor(m => m.Username,"Email", new { @class = "col-md-2 control-label registerLabelSpacing" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control registerTextSpacing" })
                    </div>
                </div>
                <div class="divValidationErrorText">
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger registerError" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label registerLabelSpacing" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control registerTextSpacing" })
                    </div>
                </div>
                <div class="divValidationErrorText">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger registerError" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, "Confirm", new { @class = "col-md-2 control-label registerLabelSpacing" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control registerTextSpacing" })
                    </div>
                </div>
                <div class="divValidationErrorText">
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger registerError" })
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" id="btnSubmit" value="Register" />
                    </div>
                </div>
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>





