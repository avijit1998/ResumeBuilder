                        else
                            $('#projectTimelineId').children().eq(i).addClass("timeline-right");
                    }
                }

                if(@Model.SkillStatus === 0)
                    $('#skills, #skillsNav').hide();
                if(@Model.EducationStatus === 0)
                    $('#education, #educationNav').hide();
            });
        </script>

