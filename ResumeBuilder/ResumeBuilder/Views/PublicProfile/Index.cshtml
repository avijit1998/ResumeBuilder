                    <div id="workExTimelineId" class="timeline bg-light">
                        @if (Model.WorkExList != null)
                        {
                            foreach (var data in Model.WorkExList)
                            {
                                <div class="container-timeline">
                                    <div class="content text-center">
                                        <h2>@data.OrganizationName</h2>
                                        <div>Role : @data.Role</div>
                                        @if (@data.CurrentlyWorking == true)
                                        {
                                            <h5>Currently Working Here...</h5>
                                        }
                                        <h4>@data.StartMonth/@data.StartYear - @data.EndMonth/@data.EndYear</h4>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
